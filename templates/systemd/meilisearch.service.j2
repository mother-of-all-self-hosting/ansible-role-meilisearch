[Unit]
Description=Meilisearch ({{ meilisearch_identifier }})
{% for service in meilisearch_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in meilisearch_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ meilisearch_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ meilisearch_identifier }} 2>/dev/null || true'

{#
  The --read-only option would cause 500 code errors.
#}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ meilisearch_identifier }} \
      --log-driver=none \
      --user={{ meilisearch_uid }}:{{ meilisearch_gid }} \
      --cap-drop=ALL \
      --network={{ meilisearch_container_network }} \
      {% if meilisearch_container_http_host_bind_port %}
      -p {{ meilisearch_container_http_host_bind_port }}:{{ meilisearch_container_http_port }} \
      {% endif %}
      --env-file={{ meilisearch_base_path }}/env \
      --label-file={{ meilisearch_base_path }}/labels \
      --mount type=bind,src={{ meilisearch_data_path }},dst=/meili_data \
      {% for volume in meilisearch_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in meilisearch_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ meilisearch_container_image }}

{% for network in meilisearch_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ meilisearch_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ meilisearch_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ meilisearch_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ meilisearch_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ meilisearch_identifier }}

[Install]
WantedBy=multi-user.target
