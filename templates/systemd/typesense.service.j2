[Unit]
Description=Typesense ({{ typesense_identifier }})
{% for service in typesense_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in typesense_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ typesense_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ typesense_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ typesense_identifier }} \
      --log-driver=none \
      --user={{ typesense_uid }}:{{ typesense_gid }} \
      --cap-drop=ALL \
      --read-only \
      --network={{ typesense_container_network }} \
      {% if typesense_container_http_host_bind_port %}
      -p {{ typesense_container_http_host_bind_port }}:{{ typesense_container_http_port }} \
      {% endif %}
      --env-file={{ typesense_base_path }}/env \
      --label-file={{ typesense_base_path }}/labels \
      --mount type=bind,src={{ typesense_data_path }},dst=/data \
      {% for volume in typesense_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in typesense_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ typesense_container_image }}

{% for network in typesense_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ typesense_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ typesense_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ typesense_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ typesense_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ typesense_identifier }}

[Install]
WantedBy=multi-user.target
